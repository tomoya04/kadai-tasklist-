<% if @users.any? %>
 <ul class =" media-list">
 
   <% @users.each do |user| %>
     <li class = "media">
       <div class ="media-left">
        <img class = "media-object img-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt = "">
       </div>
       <div class = "media-body">
            <div>
            <%= user.name %>
            </div> 
             <div>
            <%= link_to "プロフィール", user_path(user) %>
            </div>
        </div>
   </li>
  <% end %>
 </ul>
  <%= paginate @users %> 
<% end %>