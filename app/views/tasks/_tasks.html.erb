<table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>タスク</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
          <% tasks.each do |task| %>
              <tr>
                  <td><%= link_to task.id, task %> </td>
                  <td><%= task.content %> </td>
                  <td> <%= task.status %></td>
                  <td><% if current_user == task.user %>
                    <%= link_to "編集する",edit_task_path(task),class: "btn btn-default btn-xs" %>
                    <%= link_to "削除", task, method: :delete, data: { confirm:"本当に？"},class: 'btn btn-danger btn-xs' %>
                  <% end %>
                   </td>
              </tr>
        <% end %>
        </tbody>
    </table>
    <div>
    <%= paginate tasks %>
    </div>
    