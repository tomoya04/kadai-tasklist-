<h1>id: <%= @task.id %>の詳細ページ</h1>

<table class = "table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
      <th>タスク</th>
      <td><%= @task.content %></td>
  </tr>
  <tr>
      <th>ステータス</th>
      <td><%=@task.status %></td>
  </tr>
</table>


<%= link_to "編集する",edit_task_path(@task),class: "btn btn-default" %>
<%= link_to "削除", @task,method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger"%>


